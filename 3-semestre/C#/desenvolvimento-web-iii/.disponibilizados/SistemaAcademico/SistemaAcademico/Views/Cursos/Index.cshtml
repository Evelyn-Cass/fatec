@model IEnumerable<Academico.Models.Curso>

@{
    ViewData["Title"] = "Index";
}

<h1>Cursos</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Novo Curso</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vagas)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vagas)
            </td>
            <td>
                <a class="btn btn-warning" asp-action="Edit" asp-route-id="@item.CursoId">Alterar</a> |
                <a asp-action="Details" asp-route-id="@item.CursoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CursoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
